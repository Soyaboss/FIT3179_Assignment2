{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Daily LRT & MRT Ridership â€” Pick a Date Range"},
  "data": {
    "url": "https://raw.githubusercontent.com/Soyaboss/3179_homework_week10/refs/heads/main/ridership_lrt_mrt_long%20(1).csv",
    "format": {
      "type": "csv",
      "parse": {
        "date": "utc:%Y-%m-%d",
        "ridership": "number"           
      }
    }
  },
  "width": 900,
  "params": [
    {
      "name": "modePick",
      "value": "All",
      "bind": {"input": "select", "options": ["All", "LRT", "MRT"], "name": "Type: "}
    },
    {"name": "startDate", "value": "2019-01-01", "bind": {"input": "date", "name": "Start: "}},
    {"name": "endDate", "value": "2025-12-31", "bind": {"input": "date", "name": "End: "}}
  ],
  "transform": [
    {"filter": "modePick == 'All' || datum.mode == modePick"},
    {"filter": "isValid(datum.date) && datum.date >= toDate(startDate) && datum.date <= toDate(endDate)"}
  ],
  "mark": {"type": "line", "point": false},
  "encoding": {
    "x": {"field": "date", "type": "temporal", "timeUnit": "utcyearmonthdate", "title": "Date"},
    "y": {
      "field": "ridership",
      "type": "quantitative",
      "title": "Ridership",
      "axis": { "format": ",f" }        
    },
    "color": {
      "field": "mode_line",
      "type": "nominal",
      "title": "Line",
      "legend": {"title": "LRT/MRT Lines"}
    },
    "tooltip": [
      {"field": "date", "type": "temporal", "timeUnit": "utcyearmonthdate", "title": "Date"},
      {"field": "mode", "type": "nominal", "title": "Mode"},
      {"field": "mode_line", "type": "nominal", "title": "Line"},
      {"field": "ridership", "type": "quantitative", "title": "Ridership", "format": ",f"} 
    ]
  },
  "config": {
    "axis": {"grid": true},
    "legend": {"orient": "bottom"},
    "view": {"stroke": "transparent"},
    "numberFormat": ","
  }
}
